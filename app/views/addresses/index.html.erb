<div class="container">
	<div class="row">
		<h2>配達先登録/一覧</h2>
		<table class='table'>
<!-- 配置考える -->
		<%= form_for @address do |f| %>
			<div class="row">
				<%= f.label :郵便番号ハイフンなし%>

			</div>
			<div class="row">
				<%= f.label :住所 %>
			</div>
			<div class="row">
				<%= f.label :宛名 %>
			</div>
			<div class="actions">
			  <%= f.submit '登録する' %>
			</div>

				<div class="row">

			    </div>
			    				<div class="row">
				<%= f.text_field :post_code %>
			    </div>
			    				<div class="row">
				<%= f.text_field :post_code %>
			    </div>
			</table>

		<%end%>
	</div>
</div>

<div class="body">
<div class="container">
	<div class="row">
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @addresses.each do |address|%>
				<tr>
					<td><%= address.post_code %></td>
					<td><%= address.address %></td>
					<td><%= address.name %></td>
					<td><%= link_to 'edit', edit_address_path(address.id),class: "btn-sm btn-success" %>
					<%= link_to '削除', address_path(address.id), method: :delete, "data-confirm"=> "本当に削除してもよろしいですか？", class: "btn-sm btn-danger" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	</div>
</div>
