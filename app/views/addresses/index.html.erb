<div class="container">
	<div class="row">
		<h2>配達先登録/一覧</h2>
		<table class='table'>

		<%= form_for @address do |f| %>
			<div class="row">
				<%= f.label :郵便番号ハイフンなし%>
				<%= f.text_field :post_code %>
			</div>
			<div class="row">
				<%= f.label :住所 %>
				<%= f.text_field :address %>
			</div>
			<div class="row">
				<%= f.label :宛名 %>
				<%= f.text_field :name %>
			</div>
			<div class="actions">
			  <%= f.submit '登録する' %>
			</div>
		<%end%>



		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>郵便番号</th>
					<th>住所</th>
					<th>宛名</th>
					<th></th>
					<th colspan="4"></th>
				</tr>
			</thead>
			<tbody>
				<% @addresses.each do |address|%>
				<tr>
					<td><%= address.post_code %></td>
					<td><%= address.address %></td>
					<td><%= address.name %></td>
					<td><%= link_to 'edit', edit_address_path(address.id) %></td>
					
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>