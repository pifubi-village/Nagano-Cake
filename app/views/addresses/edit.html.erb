<div class="container">
	<div class="row">
		<h1>配達先編集</h1>
		<%= form_for @address do |f| %>
			<div class="row">
				<%= f.label :郵便番号ハイフンなし%>
				<%= f.text_field :post_code %>
			</div>
			<div class="row">
				<%= f.label :住所 %>
				<%= f.text_field :address %>
			</div>
			<div class="row">
				<%= f.label :宛名 %>
				<%= f.text_field :name %>
			</div>
			<div class="actions">
			  <%= f.submit '登録する' %>
			</div>
		<%end%>
　　</div>
</div>