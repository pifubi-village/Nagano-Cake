<div class="container">
  <div class="row">
	<div class="col-xs-12">
	  <h3><span class="gray">　配達先編集　</span></h3>
		<%= form_for @address do |f| %>
		   <table style="border-style: none;">
		    <tr class="row">
			  <td style="border-style: none;"><%= f.label "郵便番号(ハイフンなし)"%></td>
			  <td style="border-style: none;"><%= f.text_field :post_code %></td>
		    </tr>
		    <tr class="row">
			  <td style="border-style: none;"><%= f.label "住所" %></td>
		      <td style="border-style: none;"><%= f.text_field :address, :size=>"30"%></td>
		    </tr>
		    <tr class="row">
			  <td style="border-style: none;"><%= f.label "宛名" %></td>
			  <td style="border-style: none;"><%= f.text_field :name %></td>
			  <td style="border-style: none;"><%= f.submit "編集する", class: 'btn btn-primary col-xs-12' %></td>
		    </tr>
		   </table>
		<% end %>
    </div>
  </div>
</div>