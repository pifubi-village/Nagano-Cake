<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<div class="genleline">
			<table >
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<% @genres.each do |genre| %>
					<tr>
						<% if genre.is_active? %>
						<td height="80"><%= link_to genre.name, products_path(genre_id: genre.id) %></td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>
		 </div>
		</div>
		<div class="productline">
       <h1><span class="gray">　商品一覧(全×全)　</span></h1>
         <div class="col-xs9">
           <% @products.each do |product|%>
           <div class="torunbox">
             <table>
               <tr>
                 <td class="noborder"><%= attachment_image_tag product, :image, format: "jpeg", size: "120x100" %></td>
               </tr>
               <tr>
                 <td class="noborder"><%= link_to product.name, product_path(product.id) %></td>
               </tr>
               <tr>
                 <td class="noborder">¥<%= number_to_currency(product.price_tax_excluded) %></td>
               </tr>
          </table>
         </div>
       <% end %>
        </div>
     </div>
      <div class='p-eu__paginate'>
		    <%= paginate @products %>
		</div>