<div class= "container">
  <div class="row">
    <div class="col-xs-3">
      <div class="genleline">
      <table >
        <thead>
          <tr>
            <th>ジャンル検索</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td height="80"><%= link_to "ケーキ",  products_cake_path %></td>
          </tr>
          <tr>
            <td height="80"><%= link_to "焼き菓子",  products_bakedgoods_path %></td>
          </tr>
          <tr>
            <td height="80"><%= link_to "キャンディ",  products_candy_path %></td>
          </tr>
          <tr>
            <td height="80"><%= link_to "プリン",  products_pudding_path %></td>
          </tr>
        </tbody>
      </table>
     </div>
    </div>
    <div class="productline">
       <h1><span class="gray">　ケーキ一覧　</span></h1>
         <div class="col-xs9">
           <% @products.each do |product|%>
           <div class="torunbox">
             <table>
               <tr>
                 <td class="noborder"><%= attachment_image_tag product, :image, format: "jpeg", size: "120x100" %></td>
               </tr>
               <tr>
                 <td class="noborder"><%= link_to product.name, product_path(product.id) %></td>
               </tr>
               <tr>
                 <td class="noborder">¥<%= product.price_tax_excluded %></td>
               </tr>
           </table>
         </div>
      <% end %>
        </div>
     </div>
     <div class='p-eu__paginate'>
        <%= paginate @products %>
    </div>
