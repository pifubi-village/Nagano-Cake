<div class= "container">
	<div class="row">
		<div class="col-xs-3">
			<div class="genleline">
			<table >
				<thead>
					<tr>
						<th>ジャンル検索</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>ケーキ</td>
					</tr>
					<tr>
						<td>焼き菓子</td>
					</tr>
					<tr>
						<td>キャンディ</td>
					</tr>
					<tr>
						<td>プリン</td>
					</tr>
				</tbody>
			</table>
		  </div>
		</div>
	 <div class="col-xs9">
	 	<div class="productline">
	 		  <%= form_for(@cart_product) do |f| %>
	 	  <table> 
            <tr>
              <td><%= attachment_image_tag @products, :image, format: "jpeg", size: "200x200" %></td>
            </tr>
            <tr>
              <td><%= @products.name %></td>
            </tr>
            <tr>
              <td><%= @products.detail %></td>
            </tr>
            <tr>
              <td>¥<%= @products.price_tax_excluded%>(税込)</td>
            </tr>
            <th>
              <td><%= f.number_field :number %></td>
            </th>
               <%= f.hidden_field :product_id, :value => @products.id %>
            <td><%= f.submit 'カートに入れる', class: "btn btn-primary", role: "botton" %></td>
            </tr>
          </table>
        <% end %>
       </div>
     </div>
