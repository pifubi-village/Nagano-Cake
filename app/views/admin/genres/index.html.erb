<div class="container">
  <div class="row">
  	<h1>ジャンル一覧・追加</h1>


<div class="col-xs-10 col-xs-offset-1">
<%= form_for(@genre,:url => admin_genres_path) do |f| %>
	<%= f.label :ジャンル %>
	<%= f.text_field :name %>
	<label>
		<%= f.radio_button :is_active, :true %>有効
	</label>
	<label>
		<%= f.radio_button :is_active, :false %>無効
	</label>
	
	<%= f.submit "追加",class: "btn btn-primary"  %>
<% end %>

<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
			<th></th>
		</tr>
	</thead>
	<% @genres.each do |genre| %>
	<tbody>
		<tr>
			<td><%= genre.name %></td>
			<td><%= genre.is_active %></td>
			<td><%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-primary" %>
				<%= link_to "削除", admin_genre_path(genre.id), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
			</td>
		</tr>
	</tbody>
	<% end %>
</table>
</div>
</div>
</div>