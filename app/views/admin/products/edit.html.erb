<h1>Admin::Products#edit</h1>
<p>Find me in app/views/admin/products/edit.html.erb</p>
商品編集

<%= form_for @product, url: "/admin/products/#{@product.id}" do |f| %>
	<%= attachment_image_tag @product, :image, size:'100x100', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
		<th><%= f.attachment_field :image %></th>
<table>
	
	<tr>
		<th><%= f.label :商品名 %></th>
		<th><%= f.text_field :name %></th>
	</tr>
	<tr>
		<th><%= f.label :商品説明 %></th>
		<th><%= f.text_area :detail %></th>
	</tr>
	<tr>
		<th><%= f.label :ジャンル %></th>
		<th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %></th>
	</tr>
	<tr>
		<th><%= f.label :税抜価格 %></th>
		<th><%= f.text_field :price_tax_excluded %>円</th>
	</tr>
	<tr>
		<th><%= f.label :販売ステータス %></th>
		<th><%= f.select :selling_status,
		 		Product.selling_statuses.keys, :prompt => "選択してください" %></th>
	</tr>

</table>

<%= f.submit "変更を保存する" %>
<% end %>


<%= link_to "商品管理一覧", admin_products_path %>