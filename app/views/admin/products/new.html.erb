<h1>Admin::Products#new</h1>
<p>Find me in app/views/admin/products/new.html.erb</p>
商品新規登録

<%= form_for(@product,:url => admin_products_path) do |f| %>
<table>
	<tr>
		<th><%= f.label :商品画像 %></th>
		<th><%= f.attachment_field :image %></th>
	</tr>
	<tr>
		<th><%= f.label :商品名 %></th>
		<th><%= f.text_field :name %></th>
	</tr>
	<tr>
		<th><%= f.label :商品説明 %></th>
		<th><%= f.text_area :detail %></th>
	</tr>
	<tr>
		<th><%= f.label :ジャンル %></th>
		<th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %></th>
	</tr>
	<tr>
		<th><%= f.label :税抜価格 %></th>
		<th><%= f.text_field :price_tax_excluded %>円</th>
	</tr>
	<tr>
		<th><%= f.label :販売ステータス %></th>
		<th><%= f.select :selling_status,
		 		Product.selling_statuses.keys, :prompt => "選択してください" %></th>	
	</tr>

</table>

<%= f.submit "新規登録" %>
<% end %>


<%= link_to "商品管理一覧", admin_products_path %>