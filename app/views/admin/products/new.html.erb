<div class="container">
  <div class="row">
<h1><span class="gray">　商品新規登録　</span></h1>


<%= form_for(@product,:url => admin_products_path) do |f| %>
<div class="col-xs-4">
	<img id="preview_image">
	<div id ="item_image">
		<%= attachment_image_tag @product, :image, size:'300x300',  fallback: "no_image.jpg" %>
	</div>
		<%= f.attachment_field :image %>
</div>

<div class="col-xs-7">
<table class="col-xs-12">

	<tr>
		<th><%= f.label :商品名 %></th>
		<th><%= f.text_field :name %></th>
	</tr>
	<tr>
		<th><%= f.label :商品説明 %></th>
		<th><%= f.text_area :detail %></th>
	</tr>
	<tr>
		<th><%= f.label :ジャンル %></th>
		<th><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "選択してください" %></th>
	</tr>
	<tr>
		<th><%= f.label :税抜価格 %></th>
		<th><%= f.text_field :price_tax_excluded %>円</th>
	</tr>
	<tr>
		<th><%= f.label :販売ステータス %></th>
		<th><%= f.select :selling_status,Product.selling_statuses.keys, :prompt => "選択してください" %></th>
	</tr>
</table>
</div>

<div class="col-xs-1">
<%= f.submit "新規登録", class: "btn btn-primary" %>
</div>

<% end %>


</div>
</div>