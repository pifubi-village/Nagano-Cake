<div class="container">
	<div class="row">

		<div class="col-md-7">
			<h2>注文履歴詳細</h2>

			<table class="table">
				<tbody>
					<tr>
						<td>購入者</td>
						<td><%= @order.family_name %> <%= @order.first_name %></td>
					</tr>
					<tr>
						<td>配送先</td>
						<td><%= @order.post_code %> <%= @order.address %><br><%= @order.name %></td>
					</tr>
					<tr>
						<td>支払い方法</td>
						<td><%= @order.payment_method %></td>
					</tr>
					<tr>
						<%= form_for @order, url:"/admin/order/#{@order.id}" do |f| %>
						<td>注文ステータス</td>
						<td><%= f.select :order_status, Order.order_statuses.keys, :prompt => "選択してください" %><br><%= f.submit "更新" %></td>
						<% end %>
					</tr>
				</tbody>
			</table>

		</div>

	</div>

	<div class="row">
		<div class="col-md-8">

			<table class="table">
				<thead>
					<tr>
						<td>商品名</td>
						<td>単価(税込)</td>
						<td>数量</td>
						<td>小計</td>
						<td>制作ステータス</td>
						<td></td>
					</tr>
				</thead>

				<tbody>

					<% @order_products.each do |f| %>
					<tr>
						<td><%= f.products_id.name %></td>
						<td><%= f.price_tax_included %></td>
						<td><%= f.number %></td>
						<td><%= f.price_tax_included * f.number %></td>
						<td>着手不可、後ほど追加<!-- enumとform_for --></td>
						<td>submit、後ほど追加</td>
					</tr>
					<% end %>

				</tbody>
			</table>

		</div>

		<div class="col-md-4">
			<table class="table">
				<thead>
					<tr>
						<td>商品合計</td>
						<td><%= @order.amount_price %></td>
					</tr>
					<tr>
						<td>送料</td>
						<td><%= @order.postage %></td>
					</tr>
					<tr>
						<td>請求金額合計</td>
						<td><%= @order.amount_price + @order.postage %></td>
					</tr>
				</thead>
			</table>
		</div>

	</div>

</div>

