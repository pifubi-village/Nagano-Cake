<div class="container">
	<div class="row">

		<div class="col-md-6 col-md-offset-3">

			<h2>注文履歴一覧</h2>

			<table class="table">
				<thead>
					<tr>
						<td>購入日時</td>
						<td>購入者</td>
						<td>注文個数</td>
						<td>注文ステータス</td>
					</tr>
				</thead>

				<tbody>

					<% @orders.each do |f| %>

					<tr>
						<td><%= link_to f.created_at.strftime("%Y-%m-%d %H:%M"), admin_order_path(f.id) %></td>
						<td><%= f.end_user.family_name %><%= f.end_user.first_name %></td>
						<% @aaa = 0 %>
						<% f.order_products.each do |d| %>
						<% @aaa += d.number.to_i %>
						<% end %>
						<td><%= @aaa %></td>
						<td><%= f.oeder_status %></td>
					</tr>

					<% end %>

				</tbody>
			</table>
			
			<div class='p-eu__paginate'>
			<%= paginate @orders %>
			</div>

		</div>

	</div>
</div>

