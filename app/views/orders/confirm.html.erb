<div class="container">
	<div class="row">
		<h4>注文情報確認</h4>

		<div class="col-md-8">
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @cart_products.each do |cp| %>
					<tr>
						<td><%= attachment_image_tag(cp.product, :image, size:'100x100', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg") %>
						    <%= cp.product.name %>
						</td>
						<td><%= cp.product.price_tax_excluded%></td>
						<td><%= cp.number %></td>
						<td><%= cp.product.price_tax_excluded*cp.number%></td>
					</tr>
					<% end %>

				</tbody>
			</table>
		</div>

		<div class="col-md-4">
			<table class="table">
				<tbody>
					　
					<tr>
						<th>送料</th>
						<td><%= @postage %></td>
					</tr>
					<tr>
						<th>商品合計</th>
						<td><%= @sum %></td>
					</tr>
					<tr>
						<th>請求金額</th>
						<td><% @amount_price %></td>
					</tr>
				</tbody>
			</table>
		</div>

	</div>

	<div class="row">
		<div class="col-md-7">
			<table>
				<tr>
					<th>支払い方法</th>
					<td><%= @order.payment_method %></td>
				</tr>
				<tr>
					<th>お届け先</th>
					<td>
					<%= @order.post_code%>
					<%= @order.address %>
					<%= @order.family_name%>
					<%= @order.first_name%>
					<%= @order.name%>
				    </td>
				</tr>
				<div style="margin:0 auto;">

					<%= form_for(@order,url: complete_orders_path, method: :POST) do |f| %>
					<%= f.hidden_field :post_code, :value => @order.post_code %>
					<%= f.hidden_field :address, :value => @order.address%>
					<%= f.hidden_field :name, :value => @order.name %>
					<%= f.hidden_field :amount_price, :value => @order.amount_price %>
					<%= f.hidden_field :postage, :value => @order.postage %>
					<%= f.hidden_field :amount_price, :value => @order.amount_price %>
			        <%= f.hidden_field :oeder_status, :value => @order.oeder_status %>
			<%=  f.submit "購入を確定する" %></div>
			<%end%>
		</div>
		</table>
		</div>
	</div>
	</div>

</div>
