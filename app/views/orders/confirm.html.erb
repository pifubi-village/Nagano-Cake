<div class="container">
	<div class="row">
	  <div class="tyumon">
	    <h2><span class="gray">注文情報確認</span></h2>
      </div>
		<div class="col-md-9">
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th>商品名</th>
						<th>単価（税込）</th>
						<th>数量</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% current_end_user.cart_products.each do |cp| %>
					<tr>
						<td><%= attachment_image_tag(cp.product, :image, size:'60x60', class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg") %>
						    <%= cp.product.name %>
						</td>
						<td><%= cp.product.price_tax_excluded%></td>
						<td><%= cp.number %></td>
						<td><%= cp.product.price_tax_excluded*cp.number%></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="col-md-3">
			<table class="table">
				<tbody>
					<tr>
						<th>送料</th>
						<td><%= session[:order]["postage"] %></td>
					</tr>
					<tr>
						<th>商品合計</th>
						<td><%= session[:order]["amount_price"].to_i - session[:order]["postage"].to_i %></td>
					</tr>
					<tr>
						<th>請求金額</th>
						<td><%= session[:order]["amount_price"] %></td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-12">
			<table>
			     <tr>
					<td class="noborder"><h4>支払方法</h4></th>
					<td class="noborder"><%= session[:order]["payment_method"] %></td>
				 </tr>
				 <tr>
					<td class="noborder"><h4>お届け先</h4></th>
					<td class="noborder">
						〒<%= session[:order]["post_code"] %>
						<%= session[:order]["address"] %>
						<%= session[:order]["name"] %>
				    </td>
				  </tr>
			</table>
				<div class="text-center">
					<%=  link_to "購入を確定する", complete_orders_path,class: 'btn btn-success btn-lg' %>
			   </div>
		</div>
	</div>
</div>
