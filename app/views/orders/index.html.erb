<div class="container">
	<div class="row">
		<h2>注文履歴一覧</h2>

		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>注文日</th>
					<th>配達先</th>
					<th>注文商品</th>
					<th>支払い金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
			</thead>
			<tbody>
				<tr>

				<% @orders.each do |order| %>
				<% order.order_products do |product| %>
					<td> <%= order.created_at %> </td>
					<td> <%= order.address %></td>
				    <td> <%= order.product.name %> </td>
				    <td> <%= order.product.amount_price %> </td>
					<td> <%= order.product_status %></td>
					<td> <%= link_to "注文詳細", order_path( @order) %></td>
				<% end %>
				<% end %>
				</tr>

			</tbody>
		</table>
	</div>
</div>