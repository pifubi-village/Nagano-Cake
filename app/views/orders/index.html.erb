<div class="container">
	<div class="row">
		<h2>注文履歴一覧</h2>
		<table class="table table-hover table-inverse">
			<thead>
				<tr>
					<th>注文日</th>
					<th>配達先</th>
					<th>注文商品</th>
					<th>支払い金額</th>
					<th>ステータス</th>
					<th>注文詳細</th>
				</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
					<tr>
						<td> <%= order.updated_at.strftime("%Y-%m-%d %H:%M") %> </td>
						<td>〒<%= order.post_code %>
							<%= order.address %>
					       <%= order.name %> 様</td>
				
						    <td><% order.order_products.each do |item| %>
						     <%= item.product.name %><br>
						     <% end %><td>

						    <td> <%= order.amount_price %> </td>
							<td> <%= order.oeder_status %></td>
							<td> <%= link_to "注文詳細", order_path(order),class: "btn btn-success"  %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

