<div class= "container">
	<div class="row">
      <div class="col-xs-9">
		<h4>注文情報入力</h4>
			<table class="table">
				<tbody>
					<%= form_for @order do |f| %>
						<tr>
							<%= f.label :支払い方法　%>
							<label style = " display:block;position:relative;padding-left:1em;"><%= f.radio_button :payment_method,"1"%> cash</label>
							<label style = " display:block;position:relative;padding-left:1em;"><%= f.radio_button :payment_method,"2"%>credit_card</label>
						</tr>
						<tr>
							<%= f.label :お届け先 %>
						<label style = " display:block;position:relative;padding-left:1em;"><%= f.radio_button :address,"ご自身の住所" %>ご自身の住所</label>
						<%= @end_user.address%>
						<label style =" display:block;position:relative;padding-left:1em;"><%= f.radio_button :address,"登録済住所から選択"%>登録済住所から選択</label>
						 <%= f.collection_select(:address, Address.all, :id, :address, include_blank: "選択して下さい") %>
						<!-- 　選択肢の中に変数を入れるのか？ -->
	  					<label style =" display:block;position:relative;padding-left:1em;"><%= f.radio_button :address,"新しいお届け先"%>新しいお届け先</label>
						</tr>
						<tr class="row">
							<th> <%= f.label "郵便番号(ハイフンなし)" %> </th>
							<td ><%= f.text_field :post_code %></td>
						</tr>
						<tr class="row">
							<th><%= f.label :住所 %> </th>
							<td><%= f.text_field :address %></td>
						</tr>
						<tr class="row">
							<th> <%= f.label :宛名 %> </th>
							<td><%= f.text_field :name %></td>
						</tr>
				</tbody>
			</table>
			<%= f.submit "確認画面に進む",class: 'btn btn-primary' %>
			<% end %>
		</div>
	</div>
</div>
